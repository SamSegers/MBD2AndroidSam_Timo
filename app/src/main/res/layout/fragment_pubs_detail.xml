<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.samtimo.pubcrawl.PubsDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/fragment_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_pub_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_collection_add"
            android:textAllCaps="false"/>

        <!-- TODO
        <Button
            android:id="@+id/button_show_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_add_pub"
            android:textAllCaps="false"/>-->

        <TextView
            android:id="@+id/text_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/fragment_pubs_detail_placeholder"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/layout_reviews"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Reviews"/>

            <ListView
                android:id="@+id/list_pub_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>>
    </LinearLayout>
</FrameLayout>
